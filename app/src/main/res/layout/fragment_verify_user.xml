<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_color"
    tools:context=".ui.fragments.signUp.VerifyUserFragment">

    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/high_margin"
            android:text="@string/verify"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lorem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify"
            android:layout_marginStart="@dimen/standarize_spacing"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/standarize_spacing"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_horizontal"
            android:text="@string/verify_text"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_code_blocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_parent"
        android:layout_marginLeft="@dimen/standarize_spacing"
        android:layout_marginTop="@dimen/high_margin"
        android:layout_marginRight="@dimen/standarize_spacing"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:cursorVisible="true"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_code4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:textColor="#b4bfbf" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_verify_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_code_blocks"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginStart="@dimen/standarize_spacing"
        android:layout_marginEnd="@dimen/standarize_spacing"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/verify"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_light"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>