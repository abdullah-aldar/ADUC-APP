<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginEnd="@dimen/small_margin"
    android:orientation="vertical"
    android:padding="@dimen/medium_margin">

    <TextView
        android:id="@+id/course_code"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/gray_black"
        android:text="Course Code :" />

    <TextView
        android:id="@+id/tv_course_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_semester"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_toEndOf="@+id/course_code"
        android:text="CME301" />


    <TextView
        android:id="@+id/course_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_code"
        android:layout_marginTop="@dimen/text_gap"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/gray_black"
        android:text="Course Name :" />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_code"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_toEndOf="@+id/course_name"
        android:textColor="@color/gray_black"
        android:text="Communication Systems" />

    <TextView
        android:id="@+id/prerequeste"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name"
        android:layout_marginTop="@dimen/text_gap"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_bold"
        android:text="Prerequisite :" />

    <TextView
        android:id="@+id/tv_prerequiste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_name"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_toEndOf="@+id/prerequeste"
        android:text="ELE301" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_prerequiste"
        android:layout_marginTop="@dimen/text_gap"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_bold"
        android:text="Grade :" />

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_prerequiste"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_toEndOf="@+id/grade"
        android:text="A+" />

    <TextView
        android:id="@+id/status"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grade"
        android:layout_marginTop="@dimen/text_gap"
        android:textColor="@color/gray_black"
        android:fontFamily="@font/poppins_bold"
        android:text="Status :" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_grade"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/text_gap"
        android:layout_toEndOf="@+id/status"
        android:paddingEnd="@dimen/standarize_spacing"
        android:text="Currently Registered" />

    <TextView
        android:id="@+id/tv_total_credit_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:fontFamily="@font/poppins_bold"
        android:text="Total Credit Hours"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_completed_credit_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_total_credit_hour"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:fontFamily="@font/poppins_bold"
        android:text="Completed Credit Hours"
        android:textColor="@color/colorPrimary" />

    <View
        android:layout_below="@id/tv_completed_credit_hour"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/gray_black"/>

</RelativeLayout>