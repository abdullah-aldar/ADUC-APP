<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="loginViewModel"
            type="com.aldar.studentportal.ui.fragments.login.LoginViewModel" />
    </data>


    <RelativeLayout
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/standarize_spacing"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="@dimen/medium_margin"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_login_using"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:layout_margin="@dimen/medium_margin"
            android:gravity="center"
            android:text="Student Academic Portal"
            android:textColor="@color/white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login_using"
            android:layout_marginTop="@dimen/standarize_spacing"
            android:layout_marginStart="@dimen/standarize_spacing"
            android:layout_marginEnd="@dimen/standarize_spacing"
            android:background="@color/white"
            android:padding="@dimen/standarize_spacing">

            <TextView
                android:id="@+id/tv_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOGIN HERE"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/v_line"
                android:layout_width="60sp"
                android:layout_height="@dimen/small_margin"
                android:layout_below="@+id/tv_log_in"
                android:layout_marginTop="@dimen/small_margin"
                android:background="@color/colorPrimary" />



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_email_textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_line"
                android:layout_marginTop="@dimen/medium_margin"
                android:hint="Username"
                android:theme="@style/AppTheme">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="@={loginViewModel.username}"
                    app:error="@{loginViewModel.errorMessageUsername}"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <RelativeLayout
                android:id="@+id/ll_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email_textInputLayout"
                android:layout_marginTop="@dimen/small_margin">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_password_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:theme="@style/AppTheme">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:text="@={loginViewModel.password}"
                        app:error="@{loginViewModel.errorMessagePassword}"/>

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_pass"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/medium_margin"
                android:text="Forget Password ?"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_forget_password"
                android:layout_marginTop="@dimen/standarize_spacing"
                android:layout_marginBottom="@dimen/medium_margin"
                android:background="@color/colorPrimary"
                android:text="Log in"
                android:textStyle="bold"
                android:onClick="@{(v) -> loginViewModel.onClick(v)}"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:padding="@dimen/medium_margin"
                android:text="New Student Register Here"/>


        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:indeterminateTint="@color/green"
            app:visibility="@{loginViewModel.progressBar}" />


    </RelativeLayout>

</layout>