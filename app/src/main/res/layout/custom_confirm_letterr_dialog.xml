<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/screen_color">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/standarize_spacing"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/uni_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/standarize_spacing"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uni_logo"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/medium_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="Confirm your service request"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/standarize_spacing"
                android:layout_marginTop="@dimen/standarize_spacing"
                android:layout_marginRight="@dimen/standarize_spacing"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="4dp">


                <TextView
                    android:id="@+id/tv_letter_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/standarize_spacing"
                    android:text="52.50 DHS Will be Deducted From Your Account For This Service(Inclusive of VAT)\n\nسوف يتم خصم مبلغ 210.00 درهم من حسابك نظير هذه الخدمة"
                    android:textColor="@color/black" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/standarize_spacing"
                android:layout_marginEnd="@dimen/standarize_spacing"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="@dimen/medium_margin"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:text="Confirm"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_pay_online"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginStart="@dimen/medium_margin"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient"
                    android:text="Pay Online"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</layout>