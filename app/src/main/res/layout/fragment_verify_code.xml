<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen_color">


    <RelativeLayout
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/high_margin"
            android:fontFamily="@font/opensans_regular"
            android:text="@string/verify"
            android:textAllCaps="false"
            android:textColor="@color/gray_black"
            android:textSize="@dimen/large_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lorem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify"
            android:layout_marginStart="@dimen/standarize_spacing"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/standarize_spacing"
            android:fontFamily="@font/opensans_regular"
            android:gravity="center_horizontal"
            android:text="@string/verify_text"
            android:textSize="16sp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_code_blocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_parent"
        android:layout_marginLeft="@dimen/standarize_spacing"
        android:layout_marginTop="@dimen/high_margin"
        android:layout_marginRight="@dimen/standarize_spacing"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_otp1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_otp2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_otp3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

        <EditText
            android:id="@+id/et_otp4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="#b4bfbf" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_code_blocks"
        android:layout_marginStart="@dimen/standarize_spacing"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_marginEnd="@dimen/standarize_spacing"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/opensans_regular"
        android:gravity="center"
        android:text="@string/verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    </RelativeLayout>
</layout>