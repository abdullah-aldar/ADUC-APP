<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


   <data>
      <variable
          name="courseScheduleViewModel"
          type="com.aldar.studentportal.ui.fragments.studentDashboardFragments.myCourseSchedule.CourseScheduleViewModel" />
   </data>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/grey">

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/rv_course_schedule"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />

   <ProgressBar
       android:id="@+id/progess"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:indeterminateTint="@color/green"
       android:layout_centerInParent="true"
       app:visibility="@{courseScheduleViewModel.progressBar}"/>

</RelativeLayout>
</layout>