<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aldar.studentportal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/square_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.studentPortal.activities.ForgotPasswordActivity" />
        <activity android:name=".ui.activities.common.FeeActivity"
            android:theme="@style/AppTheme.Splash"/>
        <activity android:name=".ui.activities.common.faq.FaqActivity"
            android:theme="@style/AppTheme.Splash"/>
        <activity
            android:name=".ui.activities.common.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.studentPortal.activities.LoginSignUpActivity"
            android:theme="@style/AppTheme.Splash"/>
        <activity android:name=".ui.activities.common.WebActivity" />
        <activity
            android:name=".ui.activities.common.NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.studentPortal.activities.StudentPortalMainActivity"
            android:theme="@style/AppTheme.Splash"
            android:screenOrientation="fullSensor"/>

        <!-- firebase notification here -->
        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/main" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" /> <!-- end firebase notification -->
        <!-- MAP data here -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_apikey" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>